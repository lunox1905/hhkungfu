<div class="main-bot">
    <div class="row">
        <div class="container-optionFlim col xxl-9">
            <div class="box-watchFlim">
                <div class="watch-img">
                    <a href="/flim/{{flim.slug}}/ep{{store.length}}" class="content-bot__flim-link">
                        <img src="{{flim.image}}" alt="" style="width:230px; height:337px" class="img-flim">						     	
                        <button class="btn-watch">Xem phim</button>
                    </a>
                </div>
                <div class="box-contentFlim">
                    <h2 class="box-contentFlim-title" style="color: aliceblue;">{{flim.name}}</h2>
                    <div class="time-run">
                        <i class="fas fa-clock time-run-icon"></i>
                        <span>{{flim.time}}</span>
                    </div>
                    <p class="category-text">Thể loại:
                        {{#each flim.categorys}}
                            <span> {{this.title}},</span>
                        {{/each}}
                    </p>

                    <p class="category-text">Lịch chiếu: Thứ
                        {{flim.showTime}}
                    </p>
                    
                </div>
            </div>
            <div class="container-ep">
                <div class="box-text">
                    <i class="fas fa-indent">  FULL HD</i>
                </div>
                <div class="box-ep">
                {{#each store}}
                    <a class="ep-link" href="/flim/{{this.name}}/{{this.slug}}">
                        <button class="btn-ep">{{this.ep}}</button>
                        
                    </a>
                {{/each}}
                
                </div>

                <div class="content-flim">
                    <div class="content-bot__header">
                        <h3 class="content-bot__header-text">Nội dung</h3>
                        <p class="content-text">{{flim.name}}</p>
                    </div>
                </div>
            </div>
        </div>
        {{> main-right}}
    </div>
</div>


